{
  "name": "ego-scraper-client",
  "version": "1.0.0",
  "description": "A static client for the ego-scraper application",
  "main": "index.js",
  "scripts": {
    "dev:web": "http-server -p 8000 dist",
    "dev:watch": "npm run tags:compile -- -w",
    "dev" : "npm-run-all --parallel dev:*",
    "dist:clean": "rimraf dist",
    "tags:compile": "riot tags dist/tags.js",
    "dist:copy": "cp -R ./public dist && cp index.html dist",
    "build": "npm-run-all dist:clean tags:compile dist:copy"
  },
  "keywords": [],
  "author": "Marcus Hammarberg <marcusoftnet@gmail.com> (http://www.marcusoft.net)",
  "license": "MIT",
  "dependencies": {
    "http-server": "^0.9.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.0.1",
    "rimraf": "^2.5.4",
    "riot": "^3.0.7"
  }
}
